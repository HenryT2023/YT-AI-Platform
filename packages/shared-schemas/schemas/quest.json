{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://yantian.ai/schemas/quest.json",
  "title": "Quest Schema",
  "description": "严田 AI 文明引擎研学任务配置规范",
  "type": "object",
  "required": ["name", "quest_type", "steps"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "display_name": {
      "type": "string",
      "maxLength": 200
    },
    "description": {
      "type": "string"
    },
    "quest_type": {
      "type": "string",
      "enum": ["exploration", "learning", "challenge", "collection", "story"]
    },
    "difficulty": {
      "type": "string",
      "enum": ["easy", "medium", "hard"]
    },
    "estimated_duration_minutes": {
      "type": "integer",
      "minimum": 5
    },
    "rewards": {
      "type": "object",
      "properties": {
        "points": { "type": "integer" },
        "badges": {
          "type": "array",
          "items": { "type": "string" }
        },
        "unlocks": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "prerequisites": {
      "type": "object",
      "properties": {
        "required_quests": {
          "type": "array",
          "items": { "type": "string" }
        },
        "min_level": { "type": "integer" }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/QuestStep"
      }
    }
  },
  "definitions": {
    "QuestStep": {
      "type": "object",
      "required": ["step_number", "name", "step_type"],
      "properties": {
        "step_number": {
          "type": "integer",
          "minimum": 1
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "step_type": {
          "type": "string",
          "enum": ["visit", "answer", "scan", "collect", "talk", "observe", "create"]
        },
        "poi_id": {
          "type": "string",
          "format": "uuid"
        },
        "npc_id": {
          "type": "string",
          "format": "uuid"
        },
        "validation": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["location", "qr_code", "answer", "photo", "manual"]
            },
            "correct_answer": { "type": "string" },
            "location_radius_meters": { "type": "number" }
          }
        },
        "hints": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
