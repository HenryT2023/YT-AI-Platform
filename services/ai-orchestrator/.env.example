# AI Orchestrator 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ============================================================
# 基础配置
# ============================================================
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# 服务配置
HOST=0.0.0.0
PORT=8001

# ============================================================
# Core Backend 服务
# ============================================================
CORE_BACKEND_URL=http://localhost:8000
INTERNAL_API_KEY=your-internal-api-key

# Tool Server 配置
TOOLS_BASE_URL=http://localhost:8000/api/tools
TOOLS_TIMEOUT_SECONDS=30

# ============================================================
# LLM 配置
# ============================================================
# 可选值: baidu / openai / qwen / ollama
LLM_PROVIDER=baidu

# 降级配置
LLM_FALLBACK_ENABLED=true
LLM_SANDBOX_MODE=false

# ============================================================
# 百度 ERNIE Bot 配置
# ============================================================
# 从百度智能云控制台获取: https://console.bce.baidu.com/qianfan/ais/console/applicationConsole/application
BAIDU_API_KEY=your-baidu-api-key
BAIDU_SECRET_KEY=your-baidu-secret-key

# 可选模型:
# - ernie-bot-4 (ERNIE 4.0, 推荐)
# - ernie-4.0-8k (ERNIE 4.0 8K)
# - ernie-bot-turbo (ERNIE 3.5 Turbo, 更快)
# - ernie-bot (ERNIE 3.5)
# - ernie-3.5-8k (ERNIE 3.5 8K)
BAIDU_MODEL=ernie-bot-4

# 超时和重试
BAIDU_TIMEOUT_SECONDS=60.0
BAIDU_MAX_RETRIES=3

# ============================================================
# OpenAI 配置 (备选)
# ============================================================
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# ============================================================
# Qwen 配置 (备选)
# ============================================================
QWEN_API_KEY=
QWEN_API_BASE=https://dashscope.aliyuncs.com/api/v1
QWEN_MODEL=qwen-max

# ============================================================
# Ollama 配置 (本地)
# ============================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# ============================================================
# Redis 配置
# ============================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================
# 向量数据库配置
# ============================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION=yantian_knowledge

# ============================================================
# Embedding 配置
# ============================================================
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small

# ============================================================
# 对话配置
# ============================================================
MAX_CONTEXT_TOKENS=4000
MAX_RESPONSE_TOKENS=1000
TEMPERATURE=0.7

# ============================================================
# 记忆配置
# ============================================================
MEMORY_TTL_SECONDS=86400

# ============================================================
# 多租户默认配置
# ============================================================
DEFAULT_TENANT_ID=yantian
DEFAULT_SITE_ID=yantian-main

# ============================================================
# 证据链配置
# ============================================================
MIN_EVIDENCE_COUNT=1
MIN_CONFIDENCE_THRESHOLD=0.5
REQUIRE_VERIFIED_FOR_HISTORY=true
